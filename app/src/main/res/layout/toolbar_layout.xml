<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="mainViewModel"
            type="com.example.expenceappmvvm.screens.main.MainViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="@dimen/space_80dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/my_budget"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:onClick="@{()-> mainViewModel.addTransactionClick()}"
                android:padding="@dimen/space_20dp"
                android:src="@drawable/add_icon"
                android:visibility="@{(mainViewModel == null) ? View.GONE : View.VISIBLE }" />

            <TextView
                android:id="@+id/save"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/space_8dp"
                android:fontFamily="@font/roboto_bold"
                android:onClick="@{}"
                android:text="@string/save"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_20sp"
                android:visibility="@{(mainViewModel != null) ? View.GONE : View.VISIBLE }" />
        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>
</layout>